<AnchorPane prefHeight="575.0" prefWidth="660.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LiveStreamApp.HomePageController">
   <children>
      <AnchorPane fx:id="homePage" layoutY="-4.0" prefHeight="555.0" prefWidth="700.0" style="-fx-background-color: #ccccff;">
         <children>
            <ImageView fitHeight="66.0" fitWidth="80.0" layoutX="40.0" layoutY="27.0" opacity="0.47" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../res/HomeIcon.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="22.0" layoutY="82.0" prefHeight="30.0" prefWidth="102.0" text="HomePage">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <ImageView fx:id="search_btn" fitHeight="42.0" fitWidth="40.0" layoutX="573.0" layoutY="40.0" onMousePressed="#searchBtnAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../res/Search.png" />
               </image>
            </ImageView>
            <TextField fx:id="searchBar" alignment="CENTER" layoutX="161.0" layoutY="42.0" prefHeight="35.0" prefWidth="378.0" promptText="Search Others.." style="-fx-background-color: #f0feff;">
